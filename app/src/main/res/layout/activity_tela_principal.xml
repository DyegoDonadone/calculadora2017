<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.munif.android.calculadora2017.TelaPrincipalActivity">

    <TextView
        android:id="@+id/tvOp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operador 1"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="0"
        android:ems="10"
        android:layout_below="@+id/tvOp1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/etOp1" />

    <TextView
        android:id="@+id/tvOp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operador 2"
        android:layout_below="@+id/etOp1"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="0"
        android:ems="10"
        android:layout_below="@+id/tvOp2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/etOp2" />

    <Button
        android:text="Soma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etOp2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/btSoma"

        />

    <Button
        android:text="Subtração"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btSub"
        android:layout_alignBaseline="@+id/btSoma"
        android:layout_alignBottom="@+id/btSoma"
        android:layout_toRightOf="@+id/btSoma"
        android:layout_toEndOf="@+id/btSoma"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btMulti"
        android:layout_alignBaseline="@+id/btSub"
        android:layout_alignBottom="@+id/btSub"
        android:layout_toRightOf="@+id/btSub"
        android:layout_toEndOf="@+id/btSub"
        android:text="Multiplicação"

        />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:layout_below="@+id/btSoma"
        />

    <Button
        android:text="Sobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvResultado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:id="@+id/button4"
        android:onClick="sobre" />


</RelativeLayout>
